= render 'shared/validation_errors', obj: item

%h2.text-center= heading

.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
  = form_for @item, html: { class: 'center-block' } do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :parent_id, 'Category'
      = f.collection_select :parent_id, collection, :id, :name, { include_blank: true }, { class: 'form-control' }
    .text-center
      = link_to 'Cancel', root_path, class: 'btn btn-default'
      = f.submit submit_button, class: 'btn btn-primary'